<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="monPane" prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vues.Home">
    <children>
        <VBox alignment="CENTER_LEFT" />
    </children>
    <top>
        <Label text="Java Space Challenge" BorderPane.alignment="CENTER">
            <font>
                <Font size="26.0" />
            </font>
            <opaqueInsets>
                <Insets left="10.0" />
            </opaqueInsets>
        </Label>
    </top>

   <center>
      <HBox fx:id="linegraph" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="100.0" right="100.0" />
         </BorderPane.margin></HBox>
   </center>
   <left>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Stratégie matériel" />
            <SplitMenuButton mnemonicParsing="false" text="répartition" fx:id="matRepartButton" >
              <items>
                <MenuItem mnemonicParsing="false" text="je réparti le matériel" onAction="#matRepartOptionClick" />
                <MenuItem mnemonicParsing="false" text="Je bourre " onAction="#matRepartOptionClick" />
              </items>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </SplitMenuButton>
            <SplitMenuButton mnemonicParsing="false" text="risque" fx:id="matRiskButton">
              <items>
                <MenuItem mnemonicParsing="false" text="très précautionneux" onAction="#matRiskOptionClick" />
                <MenuItem mnemonicParsing="false" text="Yolo" onAction="#matRiskOptionClick" />
              </items>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </SplitMenuButton>
            <SplitMenuButton mnemonicParsing="false" text="fusée" fx:id="matFuseeTypeButton">
              <items>
                <MenuItem mnemonicParsing="false" text="U1" onAction="#matFuseeTypeOptionClick" />
                <MenuItem mnemonicParsing="false" text="U2" onAction="#matFuseeTypeOptionClick" />
              </items>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </SplitMenuButton>
         </children>
         <BorderPane.margin>
            <Insets left="10.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Stratégie humaine"/>
            <SplitMenuButton mnemonicParsing="false" text="risque" fx:id="humanRiskButton" >
               <items>
                  <MenuItem mnemonicParsing="false" text="priorité vie humaine" onAction="#humanRiskOptionClick" />
                  <MenuItem mnemonicParsing="false" text="chair à canon" onAction="#humanRiskOptionClick" />
               </items>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </SplitMenuButton>
            <SplitMenuButton mnemonicParsing="false" text="fusée" fx:id="humanFuseeTypeButton">
              <items>
                <MenuItem mnemonicParsing="false" text="U1" onAction="#humanFuseeTypeOptionClick" />
                <MenuItem mnemonicParsing="false" text="U2" onAction="#humanFuseeTypeOptionClick" />
              </items>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </SplitMenuButton>
         </children>
         <BorderPane.margin>
            <Insets right="10.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER_LEFT">
        <buttons>
            <Button mnemonicParsing="false" text="editer la simulation" ButtonBar.buttonData="LEFT"/>
            <Button mnemonicParsing="false" text="lancer la simulation" />
            <Button mnemonicParsing="false" onAction="#editPhase" text="editer les objets" ButtonBar.buttonData="RIGHT" />
        </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
